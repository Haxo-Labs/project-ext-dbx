# Database Configuration
REDIS_URL=redis://default:redispw@localhost:55000

# Server Configuration
HOST=0.0.0.0
PORT=3000
POOL_SIZE=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=text

# Security Configuration (Optional)
DBX_API_KEY=your-secret-api-key-here
DBX_CORS_ORIGINS=*
DBX_RATE_LIMIT_REQUESTS=1000
DBX_RATE_LIMIT_WINDOW=60

# WebSocket Configuration (Optional)
DBX_WS_ENABLED=true
DBX_WS_PATH=/redis_ws

# Monitoring Configuration (Optional)
DBX_METRICS_ENABLED=true
DBX_HEALTH_CHECK_INTERVAL=30

# SDK Configuration (for TypeScript client)
DBX_BASE_URL=http://127.0.0.1:3000
DBX_WS_HOST_URL=ws://127.0.0.1:3000/redis_ws

# JWT Authentication Configuration
JWT_SECRET=dbx-jwt-secret

# JWT token expiration times (in seconds)
JWT_ACCESS_TOKEN_EXPIRATION=900     # 15 minutes
JWT_REFRESH_TOKEN_EXPIRATION=604800 # 7 days

# JWT issuer identifier
JWT_ISSUER=dbx-api