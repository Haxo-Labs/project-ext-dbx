# Database Configuration
REDIS_URL=redis://default:redispw@localhost:55000
POOL_SIZE=10

# Server Configuration
HOST=0.0.0.0
PORT=3000

# JWT Authentication Configuration
JWT_SECRET=dbx-jwt-secret
JWT_ACCESS_TOKEN_EXPIRATION=900
JWT_REFRESH_TOKEN_EXPIRATION=604800
JWT_ISSUER=dbx-api

# User Management (Optional)
# Set to 'true' to create a default admin user on startup
CREATE_DEFAULT_ADMIN=false
DEFAULT_ADMIN_USERNAME=admin
# Required if CREATE_DEFAULT_ADMIN=true
DEFAULT_ADMIN_PASSWORD=your-secure-admin-password

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=text

# Security Configuration (Optional)
DBX_API_KEY=your-secret-api-key-here
DBX_CORS_ORIGINS=*

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
GLOBAL_REQUESTS_PER_WINDOW=1000
GLOBAL_WINDOW_SECONDS=60
GLOBAL_BURST_ALLOWANCE=1500
PER_USER_ENABLED=true
PER_IP_ENABLED=true
REDIS_KEY_PREFIX=dbx:rate_limit
GRACEFUL_DEGRADATION=true

# Legacy Rate Limiting (Deprecated - use new configuration above)
DBX_RATE_LIMIT_REQUESTS=1000
DBX_RATE_LIMIT_WINDOW=60

# WebSocket Configuration (Optional)
DBX_WS_ENABLED=true
DBX_WS_PATH=/redis_ws

# Monitoring Configuration (Optional)
DBX_METRICS_ENABLED=true
DBX_HEALTH_CHECK_INTERVAL=30

# RBAC Configuration
RBAC_AUDIT_ENABLED=true
RBAC_AUDIT_RETENTION_DAYS=90
RBAC_MAX_ROLE_INHERITANCE_DEPTH=5
RBAC_PERFORMANCE_CACHE_TTL_SECONDS=300
RBAC_DEFAULT_ASSIGNMENT_TTL_DAYS=365

# SDK Configuration (for TypeScript client)
DBX_BASE_URL=http://127.0.0.1:3000
DBX_WS_HOST_URL=ws://127.0.0.1:3000/redis_ws